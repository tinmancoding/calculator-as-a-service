{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Calculator Helm Chart Values",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "imagePullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "Always"
        },
        "imageRegistry": {
          "type": "string",
          "default": "tinmancoding"
        }
      }
    },
    "openshift": {
      "type": "object",
      "properties": {
        "build": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable OpenShift BuildConfig and ImageStream resources"
            },
            "sourceRepo": {
              "type": "string",
              "default": "https://github.com/tinmancoding/calculator-as-a-service.git",
              "description": "Git repository URL for source builds"
            },
            "sourceRef": {
              "type": "string",
              "default": "main",
              "description": "Git branch/tag/commit for builds"
            }
          }
        }
      }
    },
    "gateway": {
      "$ref": "#/definitions/service"
    },
    "parser": {
      "$ref": "#/definitions/service"
    },
    "addition": {
      "$ref": "#/definitions/service"
    },
    "subtraction": {
      "$ref": "#/definitions/service"
    },
    "multiplication": {
      "$ref": "#/definitions/service"
    },
    "division": {
      "$ref": "#/definitions/service"
    },
    "config": {
      "type": "object",
      "properties": {
        "parserServiceUrl": {
          "type": "string"
        },
        "additionServiceUrl": {
          "type": "string"
        },
        "subtractionServiceUrl": {
          "type": "string"
        },
        "multiplicationServiceUrl": {
          "type": "string"
        },
        "divisionServiceUrl": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "service": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "name": {
          "type": "string"
        },
        "replicaCount": {
          "type": "integer",
          "minimum": 0,
          "default": 2
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string",
              "default": "latest"
            }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
              "default": "ClusterIP"
            },
            "port": {
              "type": "integer"
            },
            "targetPort": {
              "type": "integer"
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "memory": {
                  "type": "string"
                },
                "cpu": {
                  "type": "string"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "memory": {
                  "type": "string"
                },
                "cpu": {
                  "type": "string"
                }
              }
            }
          }
        },
        "contextPath": {
          "type": "string",
          "description": "Path to service source code for OpenShift builds"
        }
      }
    }
  }
}
